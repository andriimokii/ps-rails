%h1 Sign In
= form_with url: session_path, local: true, data: { turbo: false } do |form|
  = form.label :email_or_username
  = form.text_field :email_or_username, required: true, autofocus: true
  = form.label :password
  = form.password_field :password, required: true
  = link_to "Sign Up!", signup_path
  %br/
  = link_to "Forgot your password?", new_password_reset_path
  = form.submit "Sign In"
