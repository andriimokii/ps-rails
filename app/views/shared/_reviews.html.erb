<%= form_with model: [movie, review], local: true, data: { turbo: false } do |form| %>
  <%= render "shared/errors", object: review %>

  <%= form.label :stars %>
  <% Review::STARS.each do |star| %>
    <span class="star">
      <%= form.radio_button :stars, star %>
      <%= label_tag star %>
    </span>
  <% end %>

  <%= form.label :comment %>
  <%= form.text_area :comment, rows: 5, placeholder: "How was a movie?" %>

  <%= form.submit "Post Review" %>
<% end %>
